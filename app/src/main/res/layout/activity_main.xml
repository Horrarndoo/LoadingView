<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zyw.horrarndoo.loadingview.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_cycle_loading_view"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        >

        <TextView
            android:id="@+id/tv_cycle_loading_view_name"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:background="@android:color/black"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="CycleLoadingView"
            android:textColor="@android:color/white"
            android:textSize="15sp"/>

        <com.zyw.horrarndoo.loadingview.CycleLoadingView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cycle_loading_view_name"
            />
    </RelativeLayout>


</RelativeLayout>
